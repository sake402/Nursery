@inherits BasePage
@page "/GameOver"
<div class="leveltimeout">
    <i class="mdi mdi-home-outline" id="home-btn" @onclick="@GoBackHome"></i>
    <div class="wrap">
        <div class="cover">
            <div class="circle">
                <div class=circle-al>
                    <h1><b>Ooops!</b></h1>
                    <i class="mdi mdi-emoticon-frown-outline" id="fail"></i>
                    <h4>Game Over!</h4>
                    <h5 class="score">Your Score:<b>@engine.CurrentPlayer.Scores[engine.Level.ToString()]</b></h5>
                    <h5 class="high-score"><b>High Score:@engine.Database.GetHighestScore(engine.Level).</b></h5>
                </div>
            </div>
            <button class="cont" @onclick="TryAgain"><h3>Try Again</h3></button>
        </div>
    </div>
</div>