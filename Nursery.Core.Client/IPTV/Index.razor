    </DataList>

    <h2>Recommended Series</h2>
    <DataList TModel="int" Models="new[]{1,2,3,4,5,6,7,8,8,8,8,8,8,8,8,8,8}"
                Features="DataListFeatures.Default|DataListFeatures.CarouselHorizontalView"
                li-class="pdr-5 corner clip">
                <img class="hx-2 wx-15" src="https://image.tmdb.org/t/p/original/tYmh36DP4rEmRAr3exAuM9CJTOG.jpg">
        @* <Media
            Height="150"
            Width="100" 
            Class="wx-1 hx-15" 
            Features="MediaFeatures.Default&~MediaFeatures.Responsive"
            Url="https://image.tmdb.org/t/p/original/tYmh36DP4rEmRAr3exAuM9CJTOG.jpg"></Media> *@
    </DataList>
</div>

<div class="pos-fix b-0 l-0 r-0 bg-dark-09 cl-white flex pd">
    <div class="fill">
        <b>Subscription Expires: April 12, 2022</b>
    </div>
    <div>
        <Button Class="nowrap" Features="ButtonFeatures.Flat">Top-Up >></Button>
    </div>
</div>

